{% extends 'baseAdmin.html.twig' %}
{% block body %}

    <div class="container-fluid pt-4 px-4">
        <div class="row">
            <div class="col">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">ajouter produit</h6>
                    {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">nom produit</label>
                        {{ form_widget(form.nom_produit, {'attr': {'class': 'form-control'}}) }}


                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">quantite produit</label>
                        {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}


                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">image produit</label>
                        {{ form_widget(form.image) }}


                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">image produit</label>

                        <input class="form-control" type="file" id="formFile">

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">prix produit</label>
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}


                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">categorie </label>
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}


                    </div>
                    <input type="hidden" value="" id="fill">


                    <button type="submit" class="btn btn-primary" style="width: 100%">{% if element == 'ajouterprod' %}ajouter{% else %}modifier{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>

    <!-- Form End -->

{% endblock %}
{% block js %}
    <script>
        console.log('ala')
        const input = document.querySelector('#formFile')
        const image_input = document.querySelector('#produit_form_image');
        input.addEventListener('change', e=>{
            console.log(input.files[0].name)
            image_input.value= input.files[0].name


        });



    </script>
{% endblock %}

{% extends 'baseAdmin.html.twig' %}

{% block title %}affiche categorie{% endblock %}

{% block body %}



<div class="container-fluid pt-4 px-4">
    <div class="row ">
        <div class="col">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">affichage categorie</h6>
                <table class="table">
                    <thead>
                    <tr>

                        <th scope="col">categorie name</th>
                        <th scope="col">supprimer</th>
                        <th scope="col">modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for c in cat %}
                    <tr>

                        <td>{{ c.name }}</td>


                        <td><a href="{{ path('deletecat',{id:c.id}) }}"><button type="button" class="btn btn-danger">Danger</button></a></td>
                        <td><a href="{{ path('updatecat',{id:c.id}) }}"><button type="button" class="btn btn-success">Success</button></a></td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
{% endblock %}
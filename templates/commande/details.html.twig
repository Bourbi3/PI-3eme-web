{% extends 'baseAdmin.html.twig' %}

{% block title %}affiche categorie{% endblock %}

{% block body %}



    <div class="container-fluid pt-4 px-4">
        <div class="row ">
            <div class="col">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">total price: {{ c.prixTotal }}</h6>
                    <h6 class="mb-4">state : {{ c.state }}</h6>
                    <h6 class="mb-4">client : {{ c.user.username }}</h6>
                    <table class="table">
                        <thead>
                        <tr>

                            <th scope="col">name</th>
                            <th scope="col">quantity</th>
                            <th scope="col">price</th>
                            <th scope="col">image</th>
                            <th scope="col">categorie</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in c.listProd %}
                            <tr>

                                <td>{{ produit.nomProduit }}</td>
                                <td>{{ produit.quantite }}</td>
                                <td>{{ produit.prix }}</td>
                                <td><img src="{{ asset(produit.image) }}" width="50" height="50"></td>
                                <td>{{ produit.categorie.name }}</td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}